.footer {
  background: var(--grey-50);
  padding: var(--space-inbetween) 0;
  font-size: var(--fontsize-small);
  position: relative;
}

.footer__list {
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.footer__listitem {
  padding: 0 var(--space-normal);
  margin: 0;
}

.footer__listitem::before {
  display: none;
}

.footer__link {
  color: var(--grey-800);
  border-bottom: 0;
      display: flex;
    align-items: center;
}

.footer__link img {
    height: 1.5rem;
    width: 1.5rem;
    margin-right: 0.5rem;
    filter: opacity(40%);
    transition: filter 0.3s;
}

.footer__link:hover {
  color: var(--grey-800);
  background: none;
  outline: none;
}

.footer__link:hover img {
  filter: none;  
}


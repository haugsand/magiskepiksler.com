    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.top {
  height: 8px;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(192, 80, 82, 0.5);
  background-image: url('/svg/top-2.svg'),
    url('/svg/top-3.svg'),
    url('/svg/top-5.svg'),
    url('/svg/top-7.svg'),
    url('/svg/top-11.svg');
}

main {
  max-width: 45rem;
  margin: 0 auto var(--space-huge) auto;
  padding: 0 7%;
}

h1 {
  font-size: var(--fontsize-title);
  line-height: var(--space-double);
  font-weight: 500;
  margin-bottom: var(--space-normal);
  text-align: center;
}

h2 {
  font-size: var(--fontsize-header);
  font-weight: 500;
  margin-top: var(--space-double);
  margin-bottom: var(--space-normal);
}

p {
  margin-bottom: var(--space-normal);
}

ul {
  margin-bottom: var(--space-normal);
  list-style: none;
}

li {
  padding-left: 3rem;
  margin-bottom: var(--space-normal);
  position: relative;
}

li::before {
  content: "";
  width: 0.5rem;
  height: 0.5rem;
  display: block;
  background: var(--red-500);
  position: absolute;
  left: 1rem;
  top: 0.75rem;
}

a {
  color: var(--purple-500);
  transition: border-color 0.3s, color 0.3s;
  text-decoration: none;
  border-bottom: thin solid currentColor;
}

a:hover {
  color: var(--purple-900);
  border-color: transparent;
}

code {
  background-color: var(--brown-50);
  color: var(--brown-900);
  font-weight: 300;
  font-family: "IBM Plex Mono", monospace;
  font-size: var(--fontsize-small);
  padding: 0.25rem;
}

pre {
  background-color: var(--brown-50);
  margin-bottom: var(--space-double);
  font-size: var(--fontsize-small);
  padding: 0.5rem 1rem;
  overflow-x: auto;
  border-top: thin solid var(--brown-100);
  border-right: thin solid var(--brown-100);
  border-bottom: thin solid var(--brown-300);
  border-left: thin solid var(--brown-100);
}

pre code {
  background: none;
  font-size: inherit;
  padding: 0;
}

pre + pre {
  margin-top: calc(var(--space-normal) * -1);
}

blockquote {
  padding-left: 3rem;
  position: relative;
  margin-bottom: var(--space-double);
}

blockquote::before {
  content: "\201C";
  position: absolute;
  left: 0.8rem;
  color: var(--red-500);
  font-size: var(--fontsize-title);
  top: 0.5rem;
}






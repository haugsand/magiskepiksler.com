* {
  margin: 0;
  padding: 0;
}

html {
  --white: #ffffff;
  --black: #000000;
  --grey-50: #f7f7f7;
  --grey-100: #d8d8d8;
  --grey-200: #b9b9b9;
  --grey-300: #9a9a9a;
  --grey-400: #7b7b7b;
  --grey-500: #5c5c5c;
  --grey-600: #4a4a4a;
  --grey-700: #373737;
  --grey-800: #252525;
  --grey-900: #121212;
  --purple-50: #fff8fc;
  --purple-100: #fdeef6;
  --purple-200: #fbcbe2;
  --purple-300: #faa8d1;
  --purple-400: #db77a9;
  --purple-500: #bd4d85;
  --purple-600: #a52263;
  --purple-700: #8d0046;
  --purple-800: #75003a;
  --purple-900: #5c002e;
  --red-50: #fff4f4;
  --red-100: #ffe9e9;
  --red-200: #ffc9c9;
  --red-300: #ffaaaa;
  --red-400: #e07a79;
  --red-500: #c05052;
  --red-600: #ab323a;
  --red-700: #8d0707;
  --red-800: #730303;
  --red-900: #590000;
  --brown-50: #fefaf5;
  --brown-100: #feeedf;
  --brown-200: #fedbb8;
  --brown-300: #fdc791;
  --brown-400: #d69859;
  --brown-500: #af6f2e;
  --brown-600: #965514;
  --brown-700: #7e3f00;
  --brown-800: #653300;
  --brown-900: #4d2600;
  --fontsize-small: 1rem;
  --fontsize-normal: 1.25rem;
  --fontsize-header: 1.75rem;
  --fontsize-title: 2.75rem;
  --space-small: 1rem;
  --space-normal: 2rem;
  --space-inbetween: 3rem;
  --space-double: 4rem;
  --space-large: 6rem;
  --space-huge: 8rem;
  height: 100%;
  scroll-behavior: smooth;
}


@media (max-width: 48em) {
  html {
    font-size: 75%;
  }
}

@media (max-width: 35em) {
  html {
    --fontsize-small: 1rem;
  }
}

body {
  background: var(--white);
  color: var(--grey-800);
  font-family: "IBM Plex Sans", sans-serif;
  font-size: var(--fontsize-normal);
  font-weight: 300;
  line-height: var(--space-normal);
      min-height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.top {
  height: 8px;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(192, 80, 82, 0.5);
  background-image: url('/gfx/top-2.svg'),
    url('/gfx/top-3.svg'),
    url('/gfx/top-5.svg'),
    url('/gfx/top-7.svg'),
    url('/gfx/top-11.svg');
}

main {
  max-width: 45rem;
  margin: 0 auto var(--space-huge) auto;
  padding: 0 7%;
}

h1 {
  font-size: var(--fontsize-title);
  line-height: var(--space-double);
  font-weight: 500;
  margin-bottom: var(--space-normal);
  text-align: center;
}

h2 {
  font-size: var(--fontsize-header);
  font-weight: 500;
  margin-top: var(--space-double);
  margin-bottom: var(--space-normal);
}

h3 {
  font-size: var(--fontsize-normal);
  font-weight: 500;
  margin-top: var(--space-double);
  margin-bottom: var(--space-normal);
}

p {
  margin-bottom: var(--space-normal);
}

ul {
  margin-bottom: var(--space-normal);
  list-style: none;
}

li {
  padding-left: 3rem;
  margin-bottom: var(--space-small);
  position: relative;
}

li::before {
  content: "";
  width: 0.5rem;
  height: 0.5rem;
  display: block;
  background: var(--red-500);
  position: absolute;
  left: 1rem;
  top: 0.75rem;
}

a {
  color: var(--purple-500);
  transition: background-color 0.3s, color 0.3s;
  text-decoration: none;
  font-weight: 400;
}

a:hover {
  color: var(--red-500);
  outline: var(--red-50) solid thin;
  background-color: var(--red-50);
}

a:focus {
  background-color: var(--purple-100);
  outline: var(--purple-100) solid thin;
  outline-offset: 0;
}

code {
  color: var(--brown-700);
  font-weight: 400;
  font-family: "IBM Plex Mono", monospace;
  font-size: var(--fontsize-small);
  padding: 0.25rem;
  background-color: var(--brown-50);
}


a code, h1 code, h2 code, h3 code, h4 code {
  background: none;
  color: inherit;
  font-weight: inherit;
  font-family: inherit;
  font-size: inherit;
  padding: 0;
}


pre {
  background-color: var(--grey-700);
  margin-bottom: var(--space-normal);
  font-size: var(--fontsize-small);
  padding: 1rem 1.5rem;
  overflow-x: auto;
  border-radius: 0.25rem;
}

pre code {
  background: none;
  font-size: inherit;
  padding: 0;
  color: var(--grey-50);
}


blockquote {
  padding-left: 3rem;
  position: relative;
  margin-bottom: var(--space-normal);
}

blockquote::before {
  content: "\201C";
  position: absolute;
  left: 0.8rem;
  color: var(--red-500);
  font-size: var(--fontsize-title);
  top: 0.5rem;
}

img {
  max-width: 100%; 
  height: auto;
}

figure {
  margin: var(--space-double) 0;
}

figure img {
  display: block;
  margin: 0 auto;
}

figcaption {
  font-size: var(--fontsize-small);
  margin-top: var(--space-normal);
  text-align: center;
  color: var(--grey-600);
}

hr {
  background: url(/gfx/hr.svg) no-repeat 50% 50%;
  border: 0;
  height: var(--space-normal);
  margin: var(--space-large) 0;
}




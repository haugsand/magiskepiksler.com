* {
  margin: 0;
  padding: 0;
}

html {
  --white: #ffffff;
  --black: #000000;
  --grey-50: #f7f7f7;
  --grey-100: #d8d8d8;
  --grey-200: #b9b9b9;
  --grey-300: #9a9a9a;
  --grey-400: #7b7b7b;
  --grey-500: #5c5c5c;
  --grey-600: #4a4a4a;
  --grey-700: #373737;
  --grey-800: #252525;
  --grey-900: #121212;
  --purple-50: #fff8fc;
  --purple-100: #fdeef6;
  --purple-200: #fbcbe2;
  --purple-300: #faa8d1;
  --purple-400: #db77a9;
  --purple-500: #bd4d85;
  --purple-600: #a52263;
  --purple-700: #8d0046;
  --purple-800: #75003a;
  --purple-900: #5c002e;
  --red-50: #fff4f4;
  --red-100: #ffe9e9;
  --red-200: #ffc9c9;
  --red-300: #ffaaaa;
  --red-400: #e07a79;
  --red-500: #c05052;
  --red-600: #ab323a;
  --red-700: #8d0707;
  --red-800: #730303;
  --red-900: #590000;
  --brown-50: #fefaf5;
  --brown-100: #feeedf;
  --brown-200: #fedbb8;
  --brown-300: #fdc791;
  --brown-400: #d69859;
  --brown-500: #af6f2e;
  --brown-600: #965514;
  --brown-700: #7e3f00;
  --brown-800: #653300;
  --brown-900: #4d2600;
  --fontsize-small: 1rem;
  --fontsize-normal: 1.25rem;
  --fontsize-header: 1.75rem;
  --fontsize-title: 2.75rem;
  --space-normal: 2rem;
  --space-inbetween: 3rem;
  --space-double: 4rem;
  --space-large: 6rem;
  --space-huge: 8rem;
  height: 100%;
}


@media (max-width: 48em) {
  html {
    font-size: 75%;
  }
}

@media (max-width: 35em) {
  html {
    --fontsize-small: 1rem;
  }
}

body {
  background: var(--white);
  color: var(--grey-800);
  font-family: "IBM Plex Sans", sans-serif;
  font-size: var(--fontsize-normal);
  font-weight: 300;
  line-height: var(--space-normal);

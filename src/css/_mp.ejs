.mp__magiske-piksler {
  --ratio: 4px;
  --color: var(--grey-900);
  margin: 0 auto;
  position: relative;
  width: calc(var(--ratio) * 52);
  height: calc(var(--ratio) * 7);
}

.mp__magiske-piksler:hover {
  --color: var(--red-600);
}

.mp__magiske {
  position: absolute;
  width: calc(var(--ratio) * 27);
  height: calc(var(--ratio) * 7);
  top: 0;
  left: 0;
}

.mp__piksler {
  position: absolute;
  width: calc(var(--ratio) * 22);
  height: calc(var(--ratio) * 7);
  top: 0;
  left: calc(var(--ratio) * 30);
}

.mp__magiske-piksler span {
  position: absolute;
  width: var(--ratio);
  height: var(--ratio);
  background-color: var(--color);
  opacity: 0;
  transition: all 0.4s;
}